<ul>
<% @touch.each do |touch| %>
  <% if touch.outgoing == false %>
    <li class="outgoing">
      <%=touch.message%>
    </li>
  <% else %>
    <li class="incoming">
      <%=touch.message%>
    </li>
<% end %>
</ul>

<%end%>
<div id="sendMessage" class="mike">
  <%= form_tag("send_message/<%=@cliend.id=>") do %>
    <p> 
    <textarea name="message_content" rows="2" cols="70" value="<%= params[:message_content] %>">
    </textarea>
    </p>   
    <input type="submit" value="send"></p>
  <% end %>
</div>

