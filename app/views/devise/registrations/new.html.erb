
<div class="auxiliary">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <!-- I am adding here NAME and PHONE NUMBER: -->

  <!-- MY ISSUE IS HERE:

