
  <div id="client_info">
    <h3>Client info:</h3>
        <p id="client_name"><%= @client.first_name %> <%= @client.last_name %> </p>
      <h4> Client Number:</h4>
        <p id="client_number"><%= @client.phone_number %></p>
      <h4> Client Notes:</h4>
        <p id="client_notes"><%= @client.notes %></p>
      <h4> Client Status: 
      <!-- This toggles the client's active/inactive status -->
      <a href ="/clients/<%= @client.id %>/update_status" class="toggle_status_link" data-client-id="<%= @client.id %>">Toggle Status</a>
      </h4>
        <p id="client_status">
          <% if @client.active == true %>
            Active
          <% else %>
            Inactive
            <% end %>
        </p>

<!-- This edits the current client-->
      <a class="show_edit_form" data-client-id="<%= @client.id %>" href="/clients/<%= @client.id %>/edit/<%= @client.business_id %>">Edit</a>

  </div>
