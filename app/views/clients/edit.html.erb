<h4>Edit client:</h4>

<%= form_tag("/clients/#{@client.id}/update/#{@business.id}", class: "client_form") do %>

  <p>First name: 
    <input type="text" name="first_name" value="<%= @client.first_name %>" required>
  </p>
  <p>Last name:
    <input type="text" name="last_name" value="<%= @client.last_name %>" required>
  </p>
  <p>Phone number:
    <input type="tel" size=10 name="phone_number" value="<%= @client.phone_number %>" required>
  </p>
  <p>Notes:<br>
    <textarea name="notes" rows="5" cols="15" value="<%= @client.notes %>">
      <%= @client.notes %>
    </textarea>
  </p>

  <input type="submit">
  
<% end %>

<%= form_tag("/clients/#{@client.id}/delete/#{@business.id}") do %>
  <input type="submit" value="delete client">
<% end %>
