<h1><%= @business.name %> Clients</h1>



<% if @business.clients != nil %>
      <% @business.clients.each do |client| %>
        <%= client.first_name %>
        <%= client.last_name %>
        <a href="/clients/<%= client.id %>/edit/<%= @business.id %>">Edit</a></br>
    <% end %>
    <% else %>
      <p>You currently have no clients.</p>
  <% end %>


<!--  This is the dropdown menu of all business clients  -->
  <%= form_tag("/clients/info/#{@business.id}", class: "dropdown") do %>
  <select name="client_id">
        <option selected disabled>Choose client</option>
        <% @business.clients.each do |client| %>
          <option value= "<%= client.id %>"
          <%= "selected" if @client != nil && client.id == @client.id %>>
          <%=client.first_name %>
          <%=client.last_name %>
          </option>
        <%end%>
  </select>
    <input type="checkbox" name="active_only" value="1">
    <label>Active Users Only (not functional - will require js)</label>
    <input type="submit">
  <% end %>

  <!-- A NEW CLIENT-->
  <h3><a href ="/clients/new/<%= @business.id%>">Add new client</a></h3>


<!-- This is the currently-selected client's info-->
<% if @client != nil %>
  <div id="client_info">
    <h2>Client info:</h2>
        <p id="client_name"><%= @client.first_name %> <%= @client.last_name %> </p>
      <h4> Client Number:</h4>
        <p id="client_number"><%= @client.phone_number %></p>
      <h4> Client Notes:</h4>
        <p id="client_notes"><%= @client.notes %></p>
      <h4> Client Status: 
      <!-- This toggles the client's active/inactive status -->
      <a href ="/clients/<%= @client.id %>/update_status/<%= @business.id %>">Toggle Status</a>
      </h4>
        <p id="client_status">
          <% if @client.active == true %>
            Active
          <% else %>
            Inactive
            <% end %>
        </p>

<!-- This edits the current client-->
      <a class="show_edit_form" data-client-id="<%= client.id %>" href="/clients/<%= @client.id %>/edit/<%= @business.id %>">Edit</a>

  </div>
<% end %>